<AnchorPane fx:id="context" prefHeight="367.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanage.controller.LoginFormController">
   <children>
      <Label layoutX="15.0" layoutY="33.0" text="Login" textFill="#5b179e">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator layoutX="12.0" layoutY="67.0" prefHeight="6.0" prefWidth="331.0" />
      <TextField fx:id="txtEmail" layoutX="17.0" layoutY="95.0" prefHeight="31.0" prefWidth="324.0" promptText="Email">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <Hyperlink layoutX="216.0" layoutY="190.0" onAction="#forgotPasswordOnAction" text="Forgot Password?" underline="true" />
      <Button layoutX="19.0" layoutY="229.0" mnemonicParsing="false" onAction="#loginOnAction" prefHeight="31.0" prefWidth="321.0" style="-fx-background-color: #0D99FF;" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="20.0" layoutY="297.0" mnemonicParsing="false" onAction="#createAnAccountOnAction" prefHeight="31.0" prefWidth="321.0" style="-fx-background-color: #1A2238;" text="Create an account" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="164.0" layoutY="270.0" text="OR">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ImageView fitHeight="372.0" fitWidth="276.0" layoutX="356.0" layoutY="-2.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/waikiki_beach.jpg" />
         </image>
      </ImageView>
      <PasswordField fx:id="txtPassword" layoutX="17.0" layoutY="147.0" prefHeight="31.0" prefWidth="324.0" promptText="Password">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
